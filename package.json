  "name": "control-air",
  "version": "1.0.0",
  "description": "Spécialiste en mesure et analyse des comportements aérauliques",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.ts",
    "build": "npm run createAssetsDir && npm run copyImages && NODE_ENV=production node node_modules/.bin/webpack && cp src/index.html dist/index.html",
    "watch": "npm run build -- --watch",
    "postinstall": "npm run build",
    "client": "webpack-dev-server --inline --progress --port 3000 --content-base src",
    "server": "tsc -p ./server && node dist/server/app.js",
    "start": "run-p server client",
    "createAssetsDir": "mkdir -p dist/static",
    "copyImages": "cp -R src/static dist/"
  },

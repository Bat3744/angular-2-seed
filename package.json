{
  "name": "heroku-angular2-seed",
  "version": "1.0.0",
  "description": "A simple starter Angular2 project ready to deploy to Heroku",
  "main": "server/app.ts",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.ts",
    "build": "npm run createAssetsDir && npm run copyImages && NODE_ENV=production node node_modules/.bin/webpack && cp src/index.html dist/index.html",
    "watch": "npm run build -- --watch",
    "postinstall": "npm run build",
    "client": "webpack-dev-server --inline --progress --port 3000 --content-base src",
    "server": "tsc -p ./server && node dist/server/app.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "createAssetsDir": "mkdir -p dist/static",
    "copyImages": "cp -R src/static dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.0",
    "css-loader": "^0.26.1",
    "dotenv": "^2.0.0",
    "html-loader": "^0.4.5",
    "json-loader": "^0.5.4",
    "mocha": "^3.4.2",
    "style-loader": "^0.13.1",
    "ts-node": "^3.3.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^1.9.0"
  },
  "dependencies": {
    "@angular/animations": "^4.2.0-rc.0",
    "@angular/common": "^4.2.0-rc.0",
    "@angular/compiler": "^4.2.0-rc.0",
    "@angular/compiler-cli": "^4.2.0-rc.0",
    "@angular/core": "^4.2.0-rc.0",
    "@angular/forms": "^4.2.0-rc.0",
    "@angular/http": "^4.2.0-rc.0",
    "@angular/platform-browser": "^4.2.0-rc.0",
    "@angular/platform-browser-dynamic": "^4.2.0-rc.0",
    "@angular/platform-server": "^4.2.0-rc.0",
    "@angular/router": "^4.2.0-rc.0",
    "@angular/upgrade": "~2.2.1",
    "@types/node": "^6.0.48",
    "angular2-in-memory-web-api": "^0.0.21",
    "angular2-modal": "^2.0.3",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^2.2.4",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.9.0",
    "ie-shim": "^0.1.0",
    "install": "0.10.1",
    "jquery": "^3.2.1",
    "json-loader": "^0.5.4",
    "ng2-recaptcha": "^1.7.0",
    "ntypescript": "1.201609302242.1",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.12",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.4",
    "typescript": "2.1.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-merge": "^1.1.0",
    "zone.js": "0.8.9"
  }
}

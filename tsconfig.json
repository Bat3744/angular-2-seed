{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"types": [
			"node",
			"mocha"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es6",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"seo-server/server.ts"
	],
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true
	},
	"angularCompilerOptions": {
		"debug": false,
		"genDir": "./dist/ngfactory",
		"entryModule": "./src/app/app-server.module#AppModule"
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
